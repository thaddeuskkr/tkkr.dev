    <script>
        async function updateDiscordStatus() {
            const response = await fetch("https://lanyard.tkkr.dev/v1/users/275830234262142978");
            const discordPresence = await response.json();
            if (!discordPresence.success) return;
            const discordStatusEl = document.getElementById("discord-status");
            const discordSpotifyEl = document.getElementById("discord-spotify");
            const discordActivityEl = document.getElementById("discord-activity");
            if (discordStatusEl) {
                const statusMap = {
                    dnd: "do not disturb",
                    online: "online",
                    idle: "idle",
                    offline: "offline",
                };
                let statusText =
                    statusMap[discordPresence.data.discord_status as "online" | "idle" | "dnd" | "offline"] ||
                    "offline";
                if (discordPresence.data.active_on_discord_mobile as boolean) statusText += " (mobile)";
                if (discordPresence.data.discord_status) {
                    discordStatusEl.innerHTML = `Currently <span class="font-semibold">${statusText}</span> on Discord.`;
                    discordStatusEl.classList.remove("hidden");
                } else {
                    discordStatusEl.classList.add("hidden");
                }
            }
            if (discordSpotifyEl) {
                const spotify = discordPresence.data.spotify;
                if (spotify) {
                    discordSpotifyEl.innerHTML = `Listening to <span class="font-semibold">${spotify.song}</span> by <span class="font-semibold">${spotify.artist}</span>.`;
                    discordSpotifyEl.classList.remove("hidden");
                } else {
                    discordSpotifyEl.classList.add("hidden");
                }
            }
            if (discordActivityEl) {
                const activities = discordPresence.data.activities;
                if (activities?.length) {
                    const filtered = activities.filter((a: { type: number }) => a.type !== 2);
                    const firstActivity = filtered[0];
                    discordActivityEl.innerHTML = `Playing <span class="font-semibold">${firstActivity.name}</span>.`;
                    discordActivityEl.classList.remove("hidden");
                } else {
                    discordActivityEl.classList.add("hidden");
                }
            }
        }
        function updateTime() {
            const timeEl = document.getElementById("time");
            if (timeEl)
                timeEl.textContent = new Date()
                    .toLocaleTimeString("en-SG", {
                        hour: "2-digit",
                        minute: "2-digit",
                        second: "2-digit",
                    })
                    .toUpperCase();
        }
        updateTime();
        updateDiscordStatus();
        setInterval(updateTime, 1000);
        setInterval(updateDiscordStatus, 10000);
    </script>
